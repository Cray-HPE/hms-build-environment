@Library('csm-shared-library') _

pipeline {
    agent {
        label "metal-gcp-builder"
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: "10"))
        timestamps()
    }

    environment {
        NAME = "hms-build-environment"
        DESCRIPTION = "Build environment for HMS tools"
        IS_STABLE = getBuildIsStable()
        VERSION = getDockerBuildVersion(isStable: env.IS_STABLE)
        VERSION_MAJOR = getDockerBuildVersion(isStable: env.IS_STABLE, versionFile: ".version_major")
        DOCKER_ARGS = getDockerBuildArgs(name: env.NAME, description: env.DESCRIPTION, version: env.VERSION)
        NO_CACHE = "--no-cache"
    }

    stages {
        stage("Image") {
            steps {
                sh "make image"
            }
        }

        stage("Publish") {
            steps {
                script {
                    publishCsmDockerImage(image: env.NAME, tag: env.VERSION, isStable: env.IS_STABLE)
                }
            }
        }
    
        stage("Publish - latest") {
            when { equals expected: "true", actual: env.IS_STABLE }
            steps {
                script {
                    publishCsmDockerImage(image: env.NAME, tag: env.VERSION_MAJOR, isStable: env.IS_STABLE)
                }
            }
        }
    }
}
